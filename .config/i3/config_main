        status_command i3status	# was MY_CONFIG
	#status_command i3blocks
	i3bar_command i3bar -t
	position top
	font pango:Hack, FontAwesome 12
	strip_workspace_numbers yes  # show only name/icons
	separator_symbol  "■"
        bindsym button4 nop
        bindsym button5 nop	
        tray_output eDP1
        tray_output LVDS-0
        tray_padding 0
        height $height
        
	colors {
        statusline         $white
        background         $transparent
        #separator          $transparent

#                          BORDER       BACKGROUND   TEXT
        #focused_workspace  $transparent $transparent $darkblue
